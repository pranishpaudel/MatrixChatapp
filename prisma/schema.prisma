// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                String   @id @default(cuid())
  email             String   @unique
  password          String
  firstName         String?
  lastName          String?
  awsProfileCreated Boolean  @default(false)
  role              String?
  image             String?
  color             Int?
  isProfileSetup    Boolean  @default(false)
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  friends           Friend[] @relation("UserFriends") // Add back-reference to `user` in `Friend` model
  friendConnections Friend[] @relation("UserFriendConnections") // Add back-reference to `friend` in `Friend` model
}

model Friend {
  id        String   @id @default(cuid())
  user      User     @relation("UserFriends", fields: [userId], references: [id])
  userId    String // The user who is adding the friend
  friend    User     @relation("UserFriendConnections", fields: [friendId], references: [id])
  friendId  String // The friend being added
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
